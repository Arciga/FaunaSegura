                    android:padding="5dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.38" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siguiente" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

