<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nachox.faunasegura.Denuncias">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginTop="46dp"
            app:srcCompat="@drawable/logoo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:layout_marginTop="34dp"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/denuncia"
                style="@style/buttonregistro"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="17dp"
                android:text="Denuncia Ciudadana" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/ic_denuncia"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="350dp"
            android:layout_height="130dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout">

            <Button
                android:id="@+id/consulta"
                style="@style/buttonregistro"
                android:layout_width="220dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Consulta tu denunucia" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/cuenta"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
